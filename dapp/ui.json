{
    "version": 1,
    "production": true,
    "title": "Fuse Multi AMB Bridge Controls",
    "description": "View and update bridge parameters",
    "constants": {
        "contractAddress": {
            "default": "0xf301d525da003e874DF574BCdd309a6BF0535bb6",
            "1": "0xf301d525da003e874DF574BCdd309a6BF0535bb6",
            "122": "0xc2220646E1E76D5fF3a441eDd9E8EFF0e4A8EF03"
        }
    },
    "image": {
        "url": "https://hotemoji.com/images/dl/v/bridge-at-night-emoji-by-twitter.png"
    },
    "aboutUrl": "https://fuse.io/",
    "panels": [
        {
			"id": "get-gas-price",
			"title": "Get the current Gas price",
			"execs": [{
				"type": "call",
				"contract": "BasicBridge",
				"address": "@constant[contractAddress]",
				"method": "gasPrice",
				"saveResultAsInput": "GasPrice"
			}],
			"outputs": [{
				"title": "Gas Price",
				"type": "int",
				"scale": "-9",
				"unit": "gwei",
				"value": "@input[GasPrice]"
			}]
        },
        
        {
            "id" : "check-if-token-registered",
            "title" : "Check if token is registered",
            "inputs": [
                {
                    "name": "_token",
                    "title": "Token contract address",
                    "type": "address",
                    "validation": [
                        {
                            "type": "allowedTypes",
                            "contract": true
                        }
                    ]
                }
            ],
            "execs" : [
                {
                    "type" : "call",
                    "contract": "BasicMultiTokenBridge",
                    "address": "@constant[contractAddress]",
                    "method": "isTokenRegistered",
                    "saveResultAsInput": "isRegistered",
                    "args": {
                        "_token": "@input[_token]"
                    }
                }
            ],
            "outputs" : [{
                "title" : "Token is Registered?",
                "type" : "bool",
                "value" : "@input[isRegistered]"
            }]
        },
        {
            "id": "view-min-max-daily-limits",
            "title": "View Limits [MinPerTx, MaxPerTx, Daily Limit]",
            "execs": [
                {
                    "type": "call",
                    "contract": "BasicMultiTokenBridge",
                    "address": "@constant[contractAddress]",
                    "method": "minPerTx",
                    "saveResultAsInput": "MinPerTx",
                    "args": {
                        "_token": "@input[_token]"
                    }
                },
                {
                    "type": "call",
                    "contract": "BasicMultiTokenBridge",
                    "address": "@constant[contractAddress]",
                    "method": "maxPerTx",
                    "saveResultAsInput": "MaxPerTx",
                    "args": {
                        "_token": "@input[_token]"
                    }
                },
                {
                    "type": "call",
                    "contract": "BasicMultiTokenBridge",
                    "address": "@constant[contractAddress]",
                    "method": "dailyLimit",
                    "saveResultAsInput": "DailyLimit",
                    "args": {
                        "_token": "@input[_token]"
                    }
                }
            ],
            "outputs": [
                {
                    "title": "minPerTx",
                    "type": "int",
                    "scale": "-18",
                    "value": "@input[MinPerTx]"
                },
                {
                    "title": "maxPerTx",
                    "type": "int",
                    "scale": "-18",
                    "value": "@input[MaxPerTx]"
                },
                {
                    "title": "Daily Limit",
                    "type": "int",
                    "scale": "-18",
                    "value": "@input[DailyLimit]"
                }
            ],
            "inputs": [
                {
                    "name": "_token",
                    "title": "Token contract address",
                    "type": "address",
                    "validation": [
                        {
                            "type": "allowedTypes",
                            "contract": true
                        }
                    ]
                }
            ]
        },
        {
            "id": "get-execution-limits",
            "title": "View Execution Limits",
            "execs": [
                {
                    "type": "call",
                    "contract": "BasicMultiTokenBridge",
                    "address": "@constant[contractAddress]",
                    "method": "executionDailyLimit",
                    "saveResultAsInput": "ExecutionDailyLimit",
                    "args": {
                        "_token": "@input[_token]"
                    }
                },
                {
                    "type": "call",
                    "contract": "BasicMultiTokenBridge",
                    "address": "@constant[contractAddress]",
                    "method": "executionMaxPerTx",
                    "saveResultAsInput": "ExecutionMaxPerTx",
                    "args": {
                        "_token": "@input[_token]"
                    }
                }
            ],
            "outputs": [
                {
                    "title": "Execution Daily Limit",
                    "type": "int",
                    "scale": "-18",
                    "value": "@input[ExecutionDailyLimit]"
                },
                {
                    "title": "Execution MaxPerTx",
                    "type": "int",
                    "scale": "-18",
                    "value": "@input[ExecutionMaxPerTx]"
                }
            ],
            "inputs": [
                {
                    "name": "_token",
                    "title": "Token contract address",
                    "type": "address",
                    "validation": [
                        {
                            "type": "allowedTypes",
                            "contract": true
                        }
                    ]
                }
            ]
        },
        {
            "id": "check-withinLimit",
            "title": "Check withinLimit",
            "inputs": [
                {
                    "name": "_amount",
                    "title": "Amount",
                    "type": "int",
                    "scale": "18"
                },
                {
                    "name": "_token",
                    "title": "Token contract address",
                    "type": "address",
                    "validation": [
                        {
                            "type": "allowedTypes",
                            "contract": true
                        }
                    ]
                }
            ],
            "execs": [
                {
                    "type": "call",
                    "contract": "BasicMultiTokenBridge",
                    "address": "@constant[contractAddress]",
                    "method": "withinLimit",
                    "args": {
                        "_amount": "@input[_amount]",
                        "_token": "@input[_token]"
                    },
                    "saveResultAsInput": "WithinLimit"
                }
            ],
            "outputs": [
                {
                    "title": "Within Limit",
                    "type": "bool",
                    "value": "@input[WithinLimit]"
                }
            ]
        },
        {
            "id": "check-withinExecutionLimit",
            "title": "Check withinExecutionLimit",
            "inputs": [
                {
                    "name": "_amount",
                    "title": "Amount",
                    "type": "int",
                    "scale": "18"
                },
                {
                    "name": "_token",
                    "title": "Token contract address",
                    "type": "address",
                    "validation": [
                        {
                            "type": "allowedTypes",
                            "contract": true
                        }
                    ]
                }
            ],
            "execs": [
                {
                    "type": "call",
                    "contract": "BasicMultiTokenBridge",
                    "address": "@constant[contractAddress]",
                    "method": "withinExecutionLimit",
                    "args": {
                        "_amount": "@input[_amount]",
                        "_token": "@input[_token]"
                    },
                    "saveResultAsInput": "WithinExecutionLimit"
                }
            ],
            "outputs": [
                {
                    "title": "Within Execution Limit",
                    "type": "bool",
                    "value": "@input[WithinExecutionLimit]"
                }
            ]
        },

        {
			"id": "set-gas-price",
			"title": "Update Gas Price",
			"inputs": [{
					"name": "_gasPrice",
					"title": "new gas price",
					"type": "int",
					"scale" : "9",
					"unit" : "gwei"
				}
			],
			"execs": [{
				"type": "send",
				"contract": "BasicBridge",
				"address": "@constant[contractAddress]",
				"method": "setGasPrice",
				"args": {
					"_gasPrice": "@input[_gasPrice]"
				}
			}]
        },
        
        {
            "id": "set-daily-limit",
            "title": "Update Daily Limit",
            "inputs": [
                {
                    "name": "_dailyLimit",
                    "title": "new daily limit",
                    "type": "int",
                    "scale": "18"
                },
                {
                    "name": "_token",
                    "title": "Token contract address",
                    "type": "address",
                    "validation": [
                        {
                            "type": "allowedTypes",
                            "contract": true
                        }
                    ]
                }
            ],
            "execs": [
                {
                    "type": "send",
                    "contract": "BasicMultiTokenBridge",
                    "address": "@constant[contractAddress]",
                    "method": "setDailyLimit",
                    "args": {
                        "_dailyLimit": "@input[_dailyLimit]",
                        "_token": "@input[_token]"
                    }
                }
            ]
        },
        {
            "id": "set-execution-daily-limit",
            "title": "Update execution Daily Limit",
            "inputs": [
                {
                    "name": "_dailyLimit",
                    "title": "New Execution Daily Limit",
                    "type": "int",
                    "scale": "18"
                },
                {
                    "name": "_token",
                    "title": "Token contract address",
                    "type": "address",
                    "validation": [
                        {
                            "type": "allowedTypes",
                            "contract": true
                        }
                    ]
                }
            ],
            "execs": [
                {
                    "type": "send",
                    "contract": "BasicMultiTokenBridge",
                    "address": "@constant[contractAddress]",
                    "method": "setExecutionDailyLimit",
                    "args": {
                        "_dailyLimit": "@input[_dailyLimit]",
                        "_token": "@input[_token]"
                    }
                }
            ]
        },
        {
            "id": "set-minPerTx",
            "title": "Update MinPerTx",
            "inputs": [
                {
                    "name": "_minPerTx",
                    "title": "New MinPerTx",
                    "type": "int",
                    "scale": "18"
                },
                {
                    "name": "_token",
                    "title": "Token contract address",
                    "type": "address",
                    "validation": [
                        {
                            "type": "allowedTypes",
                            "contract": true
                        }
                    ]
                }
            ],
            "execs": [
                {
                    "type": "send",
                    "contract": "BasicMultiTokenBridge",
                    "address": "@constant[contractAddress]",
                    "method": "setMinPerTx",
                    "args": {
                        "_minPerTx": "@input[_minPerTx]",
                        "_token": "@input[_token]"
                    }
                }
            ]
        },
        {
            "id": "set-maxPerTx",
            "title": "Update MaxPerTx",
            "inputs": [
                {
                    "name": "_maxPerTx",
                    "title": "New MaxPerTx",
                    "type": "int",
                    "scale": "18"
                },
                {
                    "name": "_token",
                    "title": "Token contract address",
                    "type": "address",
                    "validation": [
                        {
                            "type": "allowedTypes",
                            "contract": true
                        }
                    ]
                }
            ],
            "execs": [
                {
                    "type": "send",
                    "contract": "BasicMultiTokenBridge",
                    "address": "@constant[contractAddress]",
                    "method": "setMaxPerTx",
                    "args": {
                        "_maxPerTx": "@input[_maxPerTx]",
                        "_token": "@input[_token]"
                    }
                }
            ]
        }
    ]
}